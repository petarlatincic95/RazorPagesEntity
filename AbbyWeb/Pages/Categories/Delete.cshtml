@page
@model AbbyWeb.Pages.Categories.DeleteModel
<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
        
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" ReadOnly="true" class="form-control"/>
            <span asp-validation-for="Category.Name" class="text-danger"></span>

        </div>
         <div class="mb-3">
            
             <label asp-for="Category.DisplayOrder"></label>
             <input asp-for="Category.DisplayOrder" ReadOnly="true" class="form-control" />
             <span asp-validation-for="Category.DisplayOrder"class="text-danger"></span>

        </div>
        
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-info" role="button">Back to categories</a>
    

    </div>

</form>
